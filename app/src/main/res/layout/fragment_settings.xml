<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".settings">


    <TextView
        android:id="@+id/Setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="40dp" />
    <View

        android:layout_width="match_parent"

        android:orientation="horizontal"
        android:layout_height="5dp"
        android:background="@android:color/black"


        app:layout_constraintBottom_toBottomOf="@id/Setting"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/screen"
        android:layout_width="400dp"
        android:layout_height="330dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GAMEMODE" />
        <View

            android:layout_width="match_parent"

            android:orientation="horizontal"
            android:layout_height="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/PVP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PVP"
                tools:layout_editor_absoluteX="18dp"
                tools:layout_editor_absoluteY="174dp" />

            <Button
                android:id="@+id/PVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PVE"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="170dp" />

        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="BOARD SIZE" />
        <View

            android:layout_width="match_parent"

            android:orientation="horizontal"
            android:layout_height="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/board3x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3x3"
                tools:layout_editor_absoluteX="18dp"
                tools:layout_editor_absoluteY="174dp" />

            <Button
                android:id="@+id/board4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4x4"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="170dp" />

            <Button
                android:id="@+id/board5x5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5x5"
                tools:layout_editor_absoluteX="291dp"
                tools:layout_editor_absoluteY="178dp" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Win Condition"
            android:gravity="center" />
        <View

            android:layout_width="match_parent"

            android:orientation="horizontal"
            android:layout_height="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/win3x3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 markers"
                tools:layout_editor_absoluteX="18dp"
                tools:layout_editor_absoluteY="174dp" />

            <Button
                android:id="@+id/win4x4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 markers"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="170dp" />

            <Button
                android:id="@+id/win5x5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 markers"
                tools:layout_editor_absoluteX="291dp"
                tools:layout_editor_absoluteY="178dp" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Player Markers"
            android:gravity="center" />
        <View

            android:layout_width="match_parent"

            android:orientation="horizontal"
            android:layout_height="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="100dp"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/xomarkers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    XO    "
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="170dp" />

            <Button
                android:id="@+id/customiconmarkers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="custom"
                tools:layout_editor_absoluteX="146dp"
                tools:layout_editor_absoluteY="170dp" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>