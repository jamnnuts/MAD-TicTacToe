<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".leaderboard">



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent=".15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent=".85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent=".05" />


    <View

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="5dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="@id/left"/>
    <View

        android:layout_width="90dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@android:color/holo_purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="@id/left"/>

    <View

        android:layout_width="90dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@android:color/holo_purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/right" />
    <View

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:background="@android:color/holo_purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/top"
        app:layout_constraintStart_toStartOf="@id/right" />

    <View

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp"
        android:background="@android:color/holo_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/right" />


    <TextView
        android:padding="30dp"
        android:textSize="30dp"
        android:text="LEADERBOARD"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/top"
        app:layout_constraintStart_toStartOf="@id/left"
        app:layout_constraintEnd_toEndOf="@id/right" />


    <Button
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="return to main menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/right"
        app:layout_constraintStart_toStartOf="@id/left" />

    <LinearLayout
        android:id="@+id/placement"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@id/left"
        app:layout_constraintTop_toBottomOf="@id/top"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first"
            android:textSize="45dp"
            android:text="1st"
            android:textColor="@android:color/holo_orange_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/second"
            android:textSize="30dp"
            android:text="2nd"
            android:paddingTop="14dp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/third"
            android:textSize="20dp"
            android:textColor="@android:color/holo_orange_dark"
            android:text="3rd"
            android:paddingTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fourth"
            android:textSize="15dp"
            android:text="4th"
            android:paddingTop="14dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/fifth"
            android:textSize="15dp"
            android:text="5th"
            android:paddingTop="14dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sixth"
            android:textSize="15dp"
            android:text="6th"
            android:paddingTop="14dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/seventh"
            android:textSize="15dp"
            android:text="7th"
            android:paddingTop="14dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/eighth"
            android:textSize="15dp"
            android:text="8th"
            android:paddingTop="14dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ninth"
            android:textSize="15dp"
            android:text="9th"
            android:paddingTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tenth"
            android:textSize="15dp"
            android:text="10th"
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/entries"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@id/right"
        app:layout_constraintTop_toBottomOf="@id/top"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firstentry"
            android:gravity="right"
            android:textSize="30dp"
            android:text="name here"
            android:textColor="@android:color/holo_orange_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/secondentry"
            android:gravity="right"
            android:textSize="25dp"
            android:text="name here"
            android:textColor="@android:color/darker_gray"
            android:paddingTop="17dp"

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/thirdentry"
            android:gravity="right"
            android:textSize="15dp"
            android:text="name here"
            android:textColor="@android:color/holo_orange_dark"
            android:paddingTop="17dp"
            android:paddingBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fourthentry"
            android:gravity="right"
            android:textSize="15dp"
            android:text="name here"
            android:paddingTop="17dp"
            android:paddingBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/fifthentry"
            android:gravity="right"
            android:textSize="15dp"
            android:paddingTop="17dp"
            android:paddingBottom="5dp"
            android:text="name here"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/sixthentry"
            android:gravity="right"
            android:textSize="15dp"
            android:paddingTop="17dp"
            android:paddingBottom="5dp"
            android:text="name here"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/seventhentry"
            android:gravity="right"
            android:textSize="15dp"
            android:paddingTop="17dp"
            android:paddingBottom="5dp"
            android:text="name here"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/eighthentry"
            android:gravity="right"
            android:textSize="15dp"
            android:paddingTop="17dp"
            android:paddingBottom="5dp"
            android:text="name here"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ninthentry"
            android:gravity="right"
            android:textSize="15dp"
            android:paddingTop="17dp"
            android:paddingBottom="5dp"
            android:text="name here"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tenthentry"
            android:gravity="right"
            android:textSize="15dp"
            android:paddingTop="17dp"
            android:text="name here"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>