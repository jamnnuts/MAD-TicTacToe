<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerCreationFrag">

    <TextView
        android:id="@+id/firstPlayerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1P"
        android:fontFamily="@font/hey_comic"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp"
        android:layout_margin="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/VertGuide08"/>

    <TextView
        android:id="@+id/playerOneName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hey_comic"
        android:text=""
        android:textSize="15dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toEndOf="@id/firstPlayerTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/VertGuide08"/>

    <TextView
        android:id="@+id/secondPlayerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hey_comic"
        android:textSize="20dp"
        android:text="2P"
        android:textColor="@android:color/holo_red_dark"
        android:layout_margin="8dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/VertGuide08"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/playerTwoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hey_comic"
        android:text=""
        android:textSize="15dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/VertGuide08"
        app:layout_constraintEnd_toStartOf="@id/secondPlayerTitle"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/VertGuide08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".05"/>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/hey_comic"
        android:gravity="center"
        android:text="Create your player"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="32dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VertGuide08"
        app:layout_constraintVertical_bias="0.276" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent ">

        <EditText
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your name"
            android:textSize="28dp" />

        <Button
            android:id="@+id/player1saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Player 1" />
        <Button
            android:id="@+id/player2saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Player 2" />

        <Button
            android:id="@+id/returnButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Return" />

    </LinearLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>